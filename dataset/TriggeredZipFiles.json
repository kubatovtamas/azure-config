{
	"name": "TriggeredZipFiles",
	"properties": {
		"linkedServiceName": {
			"referenceName": "AzureDataLakeStorage1",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"triggerFolderPath": {
				"type": "string",
				"defaultValue": "@pipeline().parameters.triggerFolderPath"
			},
			"triggerFileName": {
				"type": "string",
				"defaultValue": "@pipeline().parameters.triggerFileName"
			}
		},
		"annotations": [],
		"type": "Binary",
		"typeProperties": {
			"location": {
				"type": "AzureBlobFSLocation",
				"fileName": {
					"value": "@dataset().triggerFileName",
					"type": "Expression"
				},
				"folderPath": {
					"value": "@dataset().triggerFolderPath",
					"type": "Expression"
				},
				"fileSystem": "test-container"
			},
			"compression": {
				"type": "ZipDeflate",
				"level": "Optimal"
			}
		}
	}
}